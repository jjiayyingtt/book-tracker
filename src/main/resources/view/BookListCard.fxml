<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="title" text="\$first" styleClass="cell_big_label" />
      </HBox>
      <FlowPane fx:id="tags" />
      <Label fx:id="author" styleClass="cell_small_label" text="\$author" />
      <Label fx:id="note" styleClass="cell_small_label" text="\$note" />
      <Label fx:id="category" styleClass="cell_small_label" text="\$category" />
      <Label fx:id="progress" styleClass="cell_small_label" text="\$progress" />
      <Label fx:id="dateStarted" styleClass="cell_small_label" text="\$dateStarted" />
      <Label fx:id="dateFinished" styleClass="cell_small_label" text="\$dateFinished" />
      <Label fx:id="rating" styleClass="cell_small_label" text="\$rating" />
      <Label fx:id="dateAdded" styleClass="cell_small_label" text="\$dateAdded" />
    </VBox>
  </GridPane>
</HBox>
